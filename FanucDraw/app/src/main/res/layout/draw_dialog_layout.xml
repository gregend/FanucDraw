<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent">
    <TextView
        android:id="@+id/drawDialogText"
        android:text="Enter file name:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>
    <EditText
        android:id="@+id/drawDialogInput"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        />
    <Button
        android:id="@+id/drawDialogPositiveButton"
        android:text="OK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:onClick="dialogPositiveButtonClicked"
        />


    <Button
        android:id="@+id/drawDialogNegativeButton"
        android:text="CANCEL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:onClick="dialogNegativeButtonClicked"
        />

</LinearLayout>
